{% extends '@atoms/grid/_grid.twig' %}

{% set grid_classes = grid_classes|default([])|merge(['grid--3-up']) %}

{% block grid_content %}
  <div class="w-full sm:w-1/3">
    {% block column_1 %}
      <span>Column 1/3</span>
    {% endblock column_1 %}
  </div>

  <div class="w-full sm:w-1/3">
    {% block column_2 %}
      <span>Column 2/3</span>
    {% endblock column_2 %}
  </div>

  <div class="w-full sm:w-1/3">
    {% block column_3 %}
      <span>Column 3/3</span>
    {% endblock column_3 %}
  </div>
{% endblock grid_content %}
